<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

<blockquote class="blockquote text-center">  
    <a href="/logout" class="btn btn-success">Logout</a>
    <div class="row py-5 px-4">
        <div class="col-md-5 mx-auto">

            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <h5 class="card-title"><%=@user.username%></h5>
                    <div class="profile mr-3"><img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.iconfinder.com%2Ficons%2F321955%2Fchef_hat_cap_business_restaurant_work_creative_kitchen_person_shape_grid_avatar_female_cook_male_staff_icon&psig=AOvVaw2hExvjtAv-1fxjzD0A3QJl&ust=1614316954556000&source=images&cd=vfe&ved=0CAIQjRxqFwoTCPiQuLqlhO8CFQAAAAAdAAAAABAS" alt="..." width="300" class="rounded mb-2 img-thumbnail">
                </div>
            </div>
                <a href="<%=@user.id%>/edit" class="btn btn-primary">Edit Profile</a></div>
            
            <div class="bg-light p-4 d-flex justify-content-end text-center">
                <ul class="list-inline mb-0">
                </ul>
            </div>
            
            <div class="px-4 py-3">
                <h5 class="mb-0">About</h5>
                <div class="p-4 rounded shadow-sm bg-light">
                    <p class="card-text"><%=@user.about%></p>
                </div>
            </div>
            
            <div class="py-4 px-4">
               
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="mb-0">My Recipes</h5><a href="/recipes/new" class="btn btn-link text-muted">Create A New Recipe</a><a href="/recipes" class="btn btn-link text-muted">Show all Recipes</a>
                </div>
                
                <%@recipes.each do |r|%>
                <div class="row">
                    <a href="/recipes/<%=r.id%>">
                    <div class="col-lg-6 mb-2 pr-lg-1"><img src="<%r.avatar%>" class="img-fluid rounded shadow-sm">
                </div>
                <%end%> 
            </div>
        </div>
    </div>
</blockquote>
