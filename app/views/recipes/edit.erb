<h2>Edit Your Recipe</h2>

<div class="form-container">
   <form action="/recipes/<%= @recipe.id %>" method="POST">
        <div class="form-control">
            <label for="recipe_name">Name</label>
            <input type="string" name="recipe[recipe_name]" required>
        </div>
        <div class="form-control">
            <label for="cuisine">Cuisine</label>
             <input type="string" name="recipe[cuisine]" required>
             </div>
        </div>
        <div class="form-control">
            <label for="difficulty">Difficulty</label>
             <input type="string" name="recipee[difficulty]" required>
             </div>
        </div>
          </div>
            <label for="value">Ingredients</label>
            <textarea rows="5" cols="50" name="ingredients[value]" type="text" required></textarea>
        </div>
        <div class="form-control">
            <label for="directions">Directions</label>
             <input type="text" name="recipe[directions]" required>
             </div>
        </div>
        <div class="form-control">
            <label for="avatar">Foodpic</label>
             <input type="file" name="recipe[avatar]" required>
             </div>
        </div>
        <input type="submit">
    </form>
</div>

